<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/review.css">
</head>
<body>
  <section>
    <div class="container-lg">
      <div class="review-box">
        <form action="/review" method="post" enctype="multipart/form-data">
          <h2 class="review-title">리뷰작성하기</h2>
          <p id="userId"><%= userId.id %></p>
          <div class="review-user"></div>
          <h3 class="rating-title">전체적으로 어떠셨나요?</h3>
            <p class="select-star">별점을 선택해주세요</p>
          <div class="review-rating">
            <div class="rating">
              ★★★★★
              <span class="rating_star" name="ratingStar">★★★★★</span>
              <input type="range" value="1" step="1" min="0" max="10">
            </div>
          </div>
          <div class="review-content">
            <h3>방문후기</h3>
            <textarea name="content" id="reviewContent" cols="50" rows="15" placeholder="음식 서비스 등의 방문경험을 작성해주세요"></textarea>
          </div>
          <div class="review-img">
            <h3>음식 및 메뉴판 사진</h3>
            <div class="upload-img">
              <input name="imgUrl" id="imgUrl" type="file" placeholder="리뷰사진" multiple>
            </div>
          </div>
          <div class="review-btn" id="reviewBtn">
            <button type="submit" type="button" class="write-btn">작성하기</button>
          </div>
        </form>
      </div>
    </div>
  </section>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script>
// 별점 선택 이벤트 처리
const rating_input = document.querySelector('.rating input');
const rating_star = document.querySelector('.rating_star');

// 별점 드래그할 때
rating_input.addEventListener('input', () => {
  rating_star.style.width = `${rating_input.value * 10}%`;
});

// 작성하기 버튼 클릭 이벤트 처리
document.getElementById('reviewBtn').addEventListener('click', function(event) {
  event.preventDefault(); // 기본 이벤트 동작을 중단합니다.

  // 별점, 리뷰 내용, 이미지 파일 가져오기
  const userId = document.getElementById('userId').innerText.trim();
  const rating = rating_input.value / 2;
  const content = document.getElementById('reviewContent').value;
  const image = document.getElementById('imgUrl').files[0];

  // FormData 객체 생성
  const formData = new FormData(); 

  // FormData에 별점, 리뷰 내용, 이미지 파일 추가
  formData.append('rating', rating);
  formData.append('userId',userId);
  formData.append('content', content);
  formData.append('imgUrl', image);

  // 서버로 데이터를 전송하는 fetch 요청 보내기
  fetch('/review', {
    method: 'POST', // POST 요청
    body: formData // FormData 객체를 전송
  })
  .then(response => {
    if (!response.ok) {
      throw new Error('데이터 전송 실패');
    }
    console.log('데이터 전송 성공');
  })
  .catch(error => {
    console.error(error);
  });
});

</script>


</html>